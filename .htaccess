# --- Disable Directory Listings ---
Options -Indexes

# --- Custom 404 Error Page ---
ErrorDocument 404 /404.html

# --- Deny Access to Sensitive Files ---
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect www to non-www
    RewriteCond %{HTTP_HOST} ^www\.harsharoyal\.in$ [NC]
    RewriteRule ^(.*)$ https://harsharoyal.in/$1 [L,R=301]

    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Block access to dotfiles (except .well-known for SSL verification)
    RewriteRule "(^|/)\.(?!well-known)" - [F]
</IfModule>

# Block dotfiles
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# --- Allow HTML Pages & Assets ---
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Allow known HTML pages
    RewriteRule ^(index|project-detail|tech-stack|freelance|404)\.html$ - [L]

    # Allow asset files (CSS, JS, images, fonts, media)
    RewriteRule \.(css|js|gif|jpe?g|png|svg|webp|woff2?|ttf|eot|otf|mp4|pdf|xml|ico|txt)$ - [L]
    
    # Allow sitemap, robots, CNAME
    RewriteRule ^(sitemap|BingSiteAuth)\.xml$ - [L]
    RewriteRule ^(CNAME|robots\.txt)$ - [L]

    # Allow root
    RewriteRule ^$ - [L]

    # Everything else → 404
    RewriteRule . /404.html [L,R=404]
</IfModule>

# --- Security Headers ---
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Mitigate Clickjacking
    Header set X-Frame-Options "DENY"
    
    # Enable XSS protection in older browsers
    Header set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # HSTS (Strict-Transport-Security) - 2 years, include subdomains, and preload
    Header set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    
    # Cross-Origin-Opener-Policy (COOP)
    Header set Cross-Origin-Opener-Policy "same-origin"
    
    # Content Security Policy (CSP)
    # Allows: 
    # - Self for most things
    # - Google Fonts (apis and gstatic)
    # - EmailJS via jsdelivr (script) and api.emailjs.com (connect)
    # - Unsafe-inline for scripts and styles (required by existing codebase animations/styles)
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https://harsharoyal.in; connect-src 'self' https://api.emailjs.com https://*.emailjs.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
</IfModule>

# --- Cache Control ---
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault                              "access plus 1 month"
    ExpiresByType text/html                     "access plus 1 hour"
    ExpiresByType text/css                      "access plus 1 year"
    ExpiresByType application/javascript        "access plus 1 year"
    ExpiresByType text/javascript               "access plus 1 year"
    ExpiresByType image/svg+xml                 "access plus 1 year"
    ExpiresByType image/jpeg                    "access plus 1 year"
    ExpiresByType image/png                     "access plus 1 year"
    ExpiresByType image/webp                    "access plus 1 year"
    ExpiresByType image/avif                    "access plus 1 year"
    ExpiresByType font/woff2                    "access plus 1 year"
    ExpiresByType font/woff                     "access plus 1 year"
    ExpiresByType font/ttf                      "access plus 1 year"
    ExpiresByType font/otf                      "access plus 1 year"
    ExpiresByType application/font-woff2        "access plus 1 year"
    ExpiresByType application/font-woff         "access plus 1 year"
    ExpiresByType application/x-font-ttf        "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    ExpiresByType video/mp4                     "access plus 1 year"
    ExpiresByType application/json              "access plus 1 hour"
    ExpiresByType application/manifest+json     "access plus 1 hour"
    ExpiresByType image/x-icon                  "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
    # Immutable static assets — fonts, images, media (1 year)
    <FilesMatch "\.(woff2?|ttf|otf|eot|svg|jpe?g|png|gif|webp|avif|ico|mp4|cur)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>

    # CSS and JS — long cache with revalidation (1 year + stale-while-revalidate)
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=31536000, public, stale-while-revalidate=86400"
    </FilesMatch>

    # HTML — short cache, always revalidate
    <FilesMatch "\.(html)$">
        Header set Cache-Control "max-age=3600, public, must-revalidate"
    </FilesMatch>

    # JSON configs — short cache
    <FilesMatch "\.(json|xml|txt)$">
        Header set Cache-Control "max-age=3600, public"
    </FilesMatch>

    # Enable ETag for cache validation
    FileETag MTime Size
</IfModule>

# --- GZIP Compression ---
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript text/javascript application/json image/svg+xml application/xml text/xml application/font-woff2 application/font-woff application/x-font-ttf
</IfModule>