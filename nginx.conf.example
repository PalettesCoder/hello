# Place this inside the http block of your nginx.conf,
# or as a file in /etc/nginx/sites-available/

server {
    listen 80;
    server_name harsharoyal.in www.harsharoyal.in;

    # Redirect www to non-www
    if ($host = 'www.harsharoyal.in') {
        return 301 https://harsharoyal.in$request_uri;
    }

    # Letsencrypt challenge
    location ~ /.well-known/acme-challenge {
        allow all;
        root /var/www/harsharoyal.in;
    }

    # Redirect all HTTP to HTTPS
    location / {
        return 301 https://harsharoyal.in$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name harsharoyal.in;

    ssl_certificate /etc/letsencrypt/live/harsharoyal.in/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/harsharoyal.in/privkey.pem;

    # SSL Configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Website root directory
    root /var/www/harsharoyal.in;
    index index.html;

    # Disable directory listing
    autoindex off;

    # --- Custom 404 Page ---
    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    # --- Security Headers ---
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # --- Allow HTML Pages ---
    location / {
        try_files $uri $uri/ =404;
    }

    # --- Cache Assets ---
    location ~* \.(css|js|gif|jpe?g|png|svg|webp|woff2?|ttf|eot|otf|mp4|pdf|ico)$ {
        expires 1M;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # --- Allow sitemap/robots ---
    location = /sitemap.xml { }
    location = /robots.txt { }

    # --- Block Dotfiles ---
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # --- GZIP Compression ---
    gzip on;
    gzip_vary on;
    gzip_min_length 256;
    gzip_types text/html text/css application/javascript application/json image/svg+xml;
}